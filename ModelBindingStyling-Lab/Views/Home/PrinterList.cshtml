@model IEnumerable<ThreeDPrinters>

@{
    ViewData["Title"] = "Printer List";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0"><i class="bi bi-printer"></i> Printer List</h2>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.SKU)</th>
                                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                                    <th>@Html.DisplayNameFor(model => model.Price)</th>
                                    <th>@Html.DisplayNameFor(model => model.BuildVolume)</th>
                                    <th>@Html.DisplayNameFor(model => model.PrinterImage)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model) {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.SKU)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                        <td>
                                            <span class="badge bg-success">@Html.DisplayFor(modelItem => item.Price)</span>
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.BuildVolume)</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.PrinterImage)) {
                                                <img src="@item.PrinterImage" alt="@item.Title" class="img-thumbnail" style="max-width: 100px;" />
                                            } else {
                                                <span class="text-muted">No image</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
